{
  "version": 3,
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
      }
    },
    {
      "name": "win-x64-debug",
      "displayName": "Windows x64 Debug",
      "generator": "Ninja",
      "inherits": "common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "GLFW_BUILD_EXAMPLES": false,
        "GLFW_BUILD_TESTS": false,
        "GLFW_BUILD_DOCS": false,
        "GLFW_INSTALL": false
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "win-x64-release",
      "displayName": "Windows x64 Release",
      "inherits": "win-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-arm-kms-debug",
      "displayName": "Linux ARM w/KMS Debug",
      "generator": "Ninja",
      "inherits": "common",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "linux-arm-kms-release",
      "displayName": "Linux ARM w/KMS Release",
      "inherits": "linux-arm-kms-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ]
}

